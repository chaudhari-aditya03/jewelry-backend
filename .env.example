# =====================================================
# SERVER CONFIGURATION
# =====================================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# =====================================================
# DATABASE CONFIGURATION (Production - Render or other cloud MySQL)
# =====================================================
# Use your Render PostgreSQL or Railway MySQL connection string
DATABASE_URL=jdbc:mysql://your-db-host:3306/jewelry_ecommerce
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password

# =====================================================
# JWT CONFIGURATION
# =====================================================
# IMPORTANT: Generate a new secure secret for production
# You can generate one using: openssl rand -base64 64
JWT_SECRET=your_secure_jwt_secret_minimum_256_bits_recommended
JWT_EXPIRATION=86400000

# =====================================================
# RAZORPAY CONFIGURATION
# =====================================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# =====================================================
# CORS CONFIGURATION
# =====================================================
# Add your Vercel production domain here
CORS_ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:5173,http://localhost:3000

# =====================================================
# FILE UPLOAD CONFIGURATION
# =====================================================
# For production, consider using cloud storage (AWS S3, Cloudinary, etc.)
FILE_UPLOAD_DIR=uploads
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB

# =====================================================
# APPLICATION SETTINGS
# =====================================================
APP_NAME=Jewelry E-Commerce
APP_VERSION=1.0.0

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL=INFO
